<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="vep">

        <class>org.vep.models.Patient</class>
        <class>org.vep.models.Exam</class>
        <class>org.vep.models.Functional</class>
        <class>org.vep.models.Structural</class>
        <class>org.vep.models.T1</class>
        <class>org.vep.models.DWI</class>
        <class>org.vep.models.sEEG</class>
        <class>org.vep.models.EEG</class>
        <class>org.vep.models.StanModel</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/vep" />
            <property name="javax.persistence.jdbc.user" value="vep" />
            <property name="javax.persistence.jdbc.password" value="ins1106" />

	    <!-- TODO testing/debug values -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>

    </persistence-unit>

</persistence>
